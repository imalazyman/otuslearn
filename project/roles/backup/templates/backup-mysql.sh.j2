#!/bin/bash
# DB backup script - runs on database servers

TIMESTAMP=$1
BACKUP_DIR="/tmp/backup_${TIMESTAMP:-manual}"

mkdir -p $BACKUP_DIR

echo "Creating MySQL backup in $BACKUP_DIR"

# Backup project_db
mysqldump -u {{ db_backup_user }} -p"{{ db_backup_password }}" project_db | gzip > $BACKUP_DIR/project_db.sql.gz

echo "MySQL backup completed: $BACKUP_DIR/project_db.sql.gz"
