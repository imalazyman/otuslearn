# roles/promtail/templates/promtail.yml.j2
server:
  http_listen_port: 9080
  grpc_listen_port: 0

positions:
  filename: /var/lib/promtail/positions.yaml

clients:
  - url: http://{{ loki_server_host | default('localhost') }}:3100/loki/api/v1/push

scrape_configs:
- job_name: system
  static_configs:
  - targets:
      - localhost
    labels:
      job: varlogs
      host: "{{ inventory_hostname }}"
      __path__: /var/log/*log

# Для систем с systemd (RHEL/CentOS/AlmaLinux)
- job_name: journal
  journal:
    max_age: 12h
    path: /var/log/journal
    labels:
      job: systemd-journal
      host: "{{ inventory_hostname }}"
  relabel_configs:
    - source_labels: ['__journal__systemd_unit']
      target_label: 'unit'

